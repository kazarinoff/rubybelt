<div>
<h1>Register</h1>
<% if flash[:notice] %>
  <% flash[:notice].each do |key,value| %>
    <p id="notice"><%= key %> <%= value[0] %></p>  
  <% end %>
<% end %>
<form action = "users/create" method = "post">
  <input type = 'hidden' name = "authenticity_token" value = "<%=form_authenticity_token%>">
  <label>First Name</label>
  <input type = "text" name = "user[first_name]" id = "user_first_name">
  <label>Last Name</label>
  <input type = "text" name = "user[last_name]" id = "user_last_name">
  <label>Email</label>
  <input type = "text" name = "user[email]" id = "user_email">
  <label>Password</label>
  <input type = "password" name = "user[password]" id = "user_password">
  <input type = "submit" value = "Register" id='joinbutton'>
</form>
</div>
